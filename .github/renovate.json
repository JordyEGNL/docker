{
  "extends": [
    "config:recommended"
  ],
  "prHourlyLimit": 0,
  "assignees": [
    "JordyEGNL"
  ],
  "commitMessageAction": "update {{packageFileDir}} -",
  "additionalBranchPrefix": "{{packageFileDir}}-",
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "groupName": "immich",
      "groupSlug": "immich",
      "matchPackageNames": [
        "/^ghcr.io/immich-app/immich-/"
      ]
    },
    {
      "matchUpdateTypes": ["patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "automergeStrategy": "squash"
    }
  ]
}
